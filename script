//file permission
echo "files which have read,write and execute permissions"
for file in * ; do
if [ -f "$file" ]; then
if [ -r "$file" ] && [ -w "$file" ] && [ -x "$file" ]; then
ls -l "$file"
fi
fi
done

//no: of occurence of a digit
echo "enter a number:"
read n
rem=0
c=0
echo "enter number to check the ocuurence"
read o
while [ $n -gt 0 ]
do
  rem=$(($n%10))
  if [ $rem -eq $o ]; then
    ((c=c+1))
  fi
  n=$((n/10))
done
echo "number of times the digit occurs is: $c"


//alternate number
echo "enter a 7 digit number:"
read num
n=1
while [ $n -le 7 ] 
do
  a=$(echo $num|cut -c $n)
  echo $a
  n=$((n+2))
done

