//salary 
echo "enter the salary"
read sal
if [ "$sal" -le 1500 ]; 
then
  hra=$(( 10 * sal / 100 ))
  da=$(( 90 * sal / 100 ))
else
  hra=500
  da=$(( 98 * sal / 100 ))
fi
echo "salary is $sal"
echo "hra is $hra"
echo "da is $da"

//grade
echo "enter mark1"
read m1
echo "enter mark2"
read m2
echo "enter mark3"
read m3
echo "enter mark4"
read m4
echo "enter mark5"
read m5
tot=$((m1+m2+m3+m4+m5))
echo "total marks is: $tot"
if [ $tot > 400 ]; 
then 
  echo "A grade"
elif [ $tot > 301 ] && [ $tot < 400 ];
then
  echo "B grade"
elif [ $tot > 201 ] && [ $tot < 300 ];
then
  echo "C grade"
else
  echo "D grade"
fi


//bank account
balance=7000
echo "welcome to bank account update"
echo "1.Deposit"
echo "2.Withdraw"
echo "3.Exit"
while true
do
  echo "enter your choice"
  read ch
  case $ch in 
  1)echo "enter amount to deposit"
    read deposit
    balance=$(($balance+$deposit))
    echo "balance amount is: $balance";;
  2)echo "enter amount to withdraw"
    read withdraw
    if [ $withdraw -gt $balance ];
    then
	echo "withdraw not posiible"
    else
        balance=$(($balance-$withdraw))
        echo "new balance is: $balance"
    fi;;
  3)echo "thank you for using bank account"
    exit 0;;
  *)echo "invalid choice";;
  esac
done

//calculator
echo "1.addition"
echo "2.subtraction"
echo "3.multiplication"
echo "4.division"
echo "5.modulo"
echo "6.exit"
while true
do 
  echo "enter your choice:"
  read ch
  case $ch in
  1)echo "enter number1:"
    read num1
    echo "enter number2:"
    read num2
    add=$(($num1+$num2))
    echo "sum is: $add";;
  2)echo "enter number1:"
    read num1
    echo "enter number2:"
    read num2
    sub=$(($num1-$num2))
    echo "subtraction is: $sub";;
  3)echo "enter number1:"
    read num1
    echo "enter number2:"
    read num2
    mul=$(($num1*$num2))
    echo "multiplication is: $mul";;
  4)echo "enter number1:"
    read num1
    echo "enter number2:"
    read num2
    div=$(($num1/$num2))
    echo "division is: $div";;
  5)echo "enter number1:"
    read num1
    echo "enter number2:"
    read num2
    mod=$(($num1%$num2))
    echo "modulus is: $mod";;
  6)echo "exiting"
    exit 0;;
  *)echo "invalid choice";;
  esac
done

